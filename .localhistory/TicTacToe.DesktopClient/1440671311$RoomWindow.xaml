<Window x:Class="TicTacToe.DesktopClient.RoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RoomWindow" Height="400" Width="400">
    <Grid>
        <ListBox Name="ListBoxAvailableGames" HorizontalAlignment="Left" Height="230" Margin="23,103,0,0" VerticalAlignment="Top" Width="273">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Id}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Available games" FontSize="25" HorizontalAlignment="Left" Margin="104,29,0,0" VerticalAlignment="Top" Width="192"/>

    </Grid>
</Window>
